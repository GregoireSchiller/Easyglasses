<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="myModalLabel">Welcome to EasyGlasses!</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs container">
            <div class="row">
              <div class="col-xs-6 col-sm-6" style="margin:auto"><%= f.input :email, required: false, placeholder: "Email", label: false %></div>
            </div>
            <div class="row">
              <div class="col-xs-6 col-sm-6"><%= f.input :password, required: false, placeholder: "Password", label: false %></div>
            </div>
            <div class="row">
              <div class="col-xs-6 col-sm-6"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
            </div>
          </div>

          <div class="form-actions container">
            <div class="row">
              <div class="col-xs-12 col-sm-6 text-center"><%= f.button :submit, "Log in", class: 'btn btn-primary modal-button', style: 'width: 25%; margin: 20px 0 20px 0;' %></div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-6 text-center"><%= render "devise/shared/log_in_links" %></div>
            </div>
          </div>
           <div class='loader-bar'>
            <div class='bar'></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
