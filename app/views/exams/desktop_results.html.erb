<div class="wrapper wrapper-grey text-center" id="wrapper_desktop_results">
  <h1>The test is over. Please find your results hereafter.</h1>
  <div class="container" style="margin-top: 40px;">
    <div class="row">
      <div class="col-xs-offset-4 col-xs-4">
        <div class="card-grey">
          <h3><strong>Total score</strong></h3>
          <h3><%= @exam.score_total %> / 20</h3>
        </div>
      </div>
    </div>

    <div class="row btm-marged">
      <div class="col-xs-offset-2 col-xs-4">
        <div class="card-grey">
          <h3><strong>Left eye score</strong></h3>
          <h3><%= @exam.score_left %> / 10</h3>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="card-grey">
          <h3><strong>Right eye score</strong></h3>
          <h3><%= @exam.score_right %> / 10</h3>
        </div>
      </div>
    </div>

      <div class="row">
        <h2><strong> <%= @exam.recommendation %></strong></h2>
      </div>

    <div class="row">
      <div class="col-xs-6"><%= link_to "My profile", user_path(@exam.user_id), class: "btn btn-lg btn-primary" %></div>
      <div class="col-xs-6">
        <% if @exam.prescription %>
            <% if @exam.prescription.status == "Pending" %>
              <% if current_user.ophtalmo == false %>
                <div class="btn btn-lg btn-success" style="background-color: orange !important; border-color: orange !important;">Prescription pending</div>
              <% else %>
                <%= form_for [@exam, @exam.prescription] do |f| %>
                  <%= f.submit "Send prescription", class: "btn btn-lg btn-primary" %>
                <% end %>
              <% end %>
            <% elsif @exam.prescription.status == "Sent" %>
              <div class="btn btn-lg btn-success" style="background-color: #60B65B !important; border-color: #60B65B !important;">Prescription sent</div>
            <% end %>
        <% else %>
          <%= form_for [@exam, @prescription] do |f| %>
            <%= f.submit "Request a prescription", class: "btn btn-lg btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
